<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.DAO.FeedDAO">
    <sql id="table">feed_table</sql>
    <sql id="selectFields">id,user_id,type,feed_date,data
    </sql>
    <select id="getLatestInformations" resultType="com.example.Model.Information">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>

        WHERE id &lt; #{maxId}

        <if test="userId.size()!=0">
            AND user_id IN
            <foreach item="item" index="index" collection="userIds" open="(" separator="," close=")">
                #{item}
            </foreach>
        </if>
        ORDER BY id DESC
        LIMIT #{count}
    </select>
</mapper>